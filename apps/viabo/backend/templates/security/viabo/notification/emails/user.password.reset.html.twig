        <div class="card-container">
            <div class="inner-card">
                <div class="card-body-mail">
                    <table>
                        <tr>
                            <td>
                                <img src="https://viabo.com/production_images/viabo_purple_agil.jpg" alt="Logo de la empresa" class="logo">
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <h1 class="title">¡Hola {{ name }}!</h1>
                                <p class="subtitle">Te informamos que se ha solicitado el restablecimiento de tu contraseña:</p>
                                <p class="details-title">Credenciales:</p>
                                <table class="details-table">
                                    <tr>
                                        <td style="color:black!important;">Usuario:</td>
                                        <td class="purple">{{ userEmail }}</td>
                                    </tr>
                                    <tr>
                                        <td style="color:black!important;">Contraseña:</td>
                                        <td class="purple">{{ password }}</td>
                                    </tr>
                                </table>
                            </td>

                        </tr>
