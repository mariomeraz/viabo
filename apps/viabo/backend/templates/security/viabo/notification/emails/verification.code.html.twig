        .card-header h1{font-size:20px;color:#5C34F5}
        .code{border:2px solid #808285;color:#808285;border-radius:10px;font-size:20px;letter-spacing:8px;padding:10px;margin-top:20px}
        .verification-text{color:#5C34F5;font-size:16px;margin-top:20px}
        .additional-text{color:#5C34F5;font-size:11px;text-align:center;margin-top:20px;opacity:.8}
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
